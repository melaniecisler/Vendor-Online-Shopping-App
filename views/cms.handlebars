<div class="container">
		<div class="row top-30">
      <div class="col-md-2 col-sm-2">
        <a class="btn btn-light" href="/products">Manage Products</a>
      </div>
      <div class="col-md-2 col-sm-2">
        <a class="btn btn-light" href="/product-list">View Products</a>
      </div>

	<div class="product-container">
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form id="product-form{{product.name}}" method="post">
          <div class="form-group">
              <input type="text" id="product-name" class="form-control" value={{product.product-name}} placeholder="Product Name" />
          </div>
          <div class="form-group">
              <input type="text" id="price" class="form-control" value={{product.price}} placeholder="Price" />
          </div>
           <div class="form-group">
              <input type="text" id="description" class="form-control" value={{product.description}} placeholder="Description" />
          </div>
          <div class="form-group">
              <button class="btn btn-info">Save Product</button>
          </div>
      </form>
    </div>
  </div>
</div>
