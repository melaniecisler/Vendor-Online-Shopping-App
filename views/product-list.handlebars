<div class="container blog">
    <div class="row">
      <div class="col-md-2 col-sm-2">
        <a class="btn btn-light" href="/product">Add New Product</a>
      </div>
      <div class="col-md-2 col-sm-2">
        <a class="btn btn-light" href="/members">Dashboard</a>
      </div>
    </div>
    <div class="row" style="margin-top: 20px;">
      <div class="col-md-12 blog-container">

<div class="container">
  <h1>Product List</h1>
  <h2>{{title}}</h2>
  <br /><br />
  <table class="table">
    <tr>
      <th>#ID</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
    {{#each products}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.product-name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.description}}</td>
        <td>
            <a href="/api/products/{{this.id}}" class="btn btn-info btn-sm">Edit</a>
            <a data-id="{{this.id}}" class="delete-product btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    {{/each}}
  </table>
      </div>
    </div>
  </div>
  <!-- Custom Script -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
  <script src="js/product-list.js"></script>

  